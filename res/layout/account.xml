<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:orientation="vertical"
	android:layout_width="fill_parent">
	<TextView android:layout_height="wrap_content" android:text="Account name: "
		android:id="@+id/accountUserName" android:gravity="center"
		android:layout_width="fill_parent" android:textSize="20sp"></TextView>
	<Button android:layout_height="wrap_content" android:text="Sign out"
		android:layout_width="match_parent" android:textSize="13sp"
		android:id="@+id/accountSignoutButton"></Button>
	<CheckBox android:layout_height="wrap_content"
		android:layout_width="match_parent" android:text="Receive notification"
		android:checked="true" android:id="@+id/accountReceiveNotification"></CheckBox>
</LinearLayout>
